{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"sourceMap": true,
		"outDir": "ts-build",
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"allowJs": true,
		"noErrorTruncation": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"node_modules"
	]
}